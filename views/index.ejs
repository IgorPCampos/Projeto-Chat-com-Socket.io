<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        #chat {
            max-height: 500px;
            min-height: 500px;
            background-color: aliceblue;
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <h1>Chat</h1>
    <div id="chat">

    </div><br>
    <input type="text" name="" id="username" placeholder="Nome de usuÃ¡rio" class="form-control">
    <input type="text" name="" id="msg" placeholder="mensagem"  class="form-control">
    
    <button onclick="enviar()" class="btn btn-primary btn-lg btn-block">Enviar</button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
    <script>
        let socket = io("http://localhost:4321")
        socket.on("disconnect", () => {
            console.log("Desconectado")
        })

        function enviar() {
            let msgField = document.querySelector("#msg")
            let usernameField = document.querySelector("#username")

            let msg = msgField.value
            let username = usernameField.value

            socket.emit("msg", {msg: msg, username: username})
        }

        socket.on("showmsg", (data) => {
            let chat = document.querySelector("#chat")
            let p = document.createElement("p")
            p.innerHTML = `${data.username} : ${data.msg}`
            chat.append(p)
        })
    </script>   
</body>
</html>